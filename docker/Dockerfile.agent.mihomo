# Stage 1: 构建 Go Agent
FROM golang:1.21-alpine AS builder

WORKDIR /build
ENV GOPROXY=https://goproxy.cn,direct

RUN --mount=type=bind,source=backend/agents/go-agent,target=/src \
    --mount=type=cache,target=/go/pkg/mod \
    cp /src/go.mod /src/go.sum ./ && go mod download && cp -r /src/* ./ && \
    CGO_ENABLED=0 GOOS=linux go build -ldflags="-s -w" -o /configflow-agent .

# Stage 2: 获取 Mihomo 二进制
FROM metacubex/mihomo:latest AS mihomo-builder

# Stage 3: 最终镜像
FROM alpine:latest

# 复制二进制文件
COPY --from=builder /configflow-agent /usr/local/bin/configflow-agent
COPY --from=mihomo-builder /mihomo /usr/local/bin/mihomo

# 安装依赖、创建目录、复制配置、设置权限（合并为单个 RUN）
RUN --mount=type=bind,source=backend/agents/go-agent,target=/src/agent \
    --mount=type=bind,source=docker/docker-agent-entrypoint-mihomo.sh,target=/src/entrypoint.sh \
    sed -i 's/dl-cdn.alpinelinux.org/mirrors.tuna.tsinghua.edu.cn/g' /etc/apk/repositories && \
    apk add --no-cache ca-certificates su-exec supervisor python3-dev py3-pip bash && \
    pip3 install --break-system-packages "setuptools<81" && \
    mkdir -p /etc/mihomo /etc/supervisor/conf.d /var/log/supervisor /run && \
    cp /src/agent/supervisord.conf /etc/supervisor/supervisord.conf && \
    cp /src/agent/supervisor/mihomo.conf /etc/supervisor/conf.d/ && \
    cp /src/agent/supervisor/agent-mihomo.conf /etc/supervisor/conf.d/ && \
    cp /src/entrypoint.sh /entrypoint.sh && \
    chmod +x /usr/local/bin/configflow-agent /usr/local/bin/mihomo /entrypoint.sh && \
    chmod -R 755 /etc/mihomo && chmod -R 777 /var/log/supervisor /run

ENV SERVER_URL="" AGENT_NAME="" SERVICE_TYPE="mihomo" AGENT_HOST="0.0.0.0" AGENT_PORT="8080" \
    AGENT_IP="" SERVICE_NAME="" CONFIG_PATH="" RESTART_COMMAND="" HEARTBEAT_INTERVAL="30" \
    TZ=Asia/Shanghai

EXPOSE 8080 53/tcp 53/udp 1053/tcp 1053/udp 7890 7891 7892 9090

ENTRYPOINT ["/entrypoint.sh"]
CMD ["/usr/bin/supervisord", "-c", "/etc/supervisor/supervisord.conf"]
